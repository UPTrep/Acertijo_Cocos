<script>
function repartirCocos() {
    const totalCocos = 3121;
    const cocosPorNaufrago = [];
    let cocosRestantes = totalCocos;
    
    for (let i = 0; i < 5; i++) {
        const cocosParaMono = Math.floor(cocosRestantes / 5);
        cocosPorNaufrago.push(cocosParaMono);
        cocosRestantes -= cocosParaMono;
        cocosRestantes--;
    }
    
    let cocosParaMonoPorLaMa침ana = cocosRestantes;
    let cocosPorNaufragoPorLaMa침ana = Math.floor((totalCocos - 5) / 5);
    
    const resultsList = document.getElementById('results-list');
    resultsList.innerHTML = '';
    
    let totalCocosNaufragos = 0;
    
    for (let i = 0; i < 5; i++) {
        const li = document.createElement('li');
        li.innerHTML = `<span class="circle blue">游녻</span> N치ufrago ${i + 1}: ${cocosPorNaufrago[i]} cocos escondidos.<br>Y despues de la reparticion final tiene : ${cocosPorNaufrago[i]+204} cocos <br><br>  `;
        resultsList.appendChild(li);
        
        totalCocosNaufragos += cocosPorNaufrago[i];
    }
    
    const monoLi = document.createElement('li');
    monoLi.innerHTML = `<span class="circle red">游</span> Mono: 5 cocos`;
    resultsList.appendChild(monoLi);

    const liTotalMa침ana = document.createElement('li');
    liTotalMa침ana.innerHTML = `<span class="circle brown"></span> A cada naufrago en la reparticion final le tocaron: ${cocosRestantes/5} cocos`;
    resultsList.appendChild(liTotalMa침ana);
    
    
    const resultsDiv = document.getElementById('results');
    resultsDiv.style.display = 'block';
}
</script>
